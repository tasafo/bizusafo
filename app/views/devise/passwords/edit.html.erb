<div class="row">
  <div class="col-md-8">
    <h2>Mudar Senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin", method: :put }) do |f| %>

      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Nova senha" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confimar nova senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div><%= f.submit "Mudar senha",class: "btn btn-primary" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>