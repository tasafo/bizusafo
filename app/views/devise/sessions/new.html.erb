<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
      <legend>Entrar</legend>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", required: true, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Entrar", class: "btn btn-primary" %></div>
      <br/>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>

  <div class="col-md-6">
    <legend>Ou...</legend>
    <%= link_to image_tag("sign_in_with_facbook.png"), user_facebook_omniauth_authorize_path, method: :post %>
  </div>
</div>
