<div id="header" class="link_title">
  <div class="row">
    <div class="col-md-6">
      <h1>
        <%= link_to "https://tasafo.org" do %>
          <%= image_tag "logo-maozinha-tasafo.png", height: 65 %>
        <% end %>
        <%= link_to "BizuSafo", root_path %>
      </h1>
    </div>
    <div class="col-md-4 main-menu-buttom">
      <% unless user_signed_in? %>
        <%= link_to "Entrar", new_user_session_path, class: "btn btn-lg btn-info" %>
        <%= link_to "Cadastre-se", new_user_registration_path, class: "btn btn-lg btn-success" %>
      <% end %>
    </div>
    <div class="col-md-2 hidden-sm hidden-xs" id="extension">
      <%= link_to t(:download_extension), "https://chrome.google.com/webstore/detail/bizusafo/egcodpfgnhacifeonmhfpgnbddalnlck", target: "_blank" %>
      <%= image_tag "chrome_icon.png" %>
    </div>
  </div>
</div>
