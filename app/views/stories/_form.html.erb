<%= render "shared/error_messages", record: @story %>
<div class="form-group">
  <%= f.label :url, "URL" %>
  <%= f.text_field :url, class: "form-control", placeholder: t("story.sample_url"), disabled: disabled_field(story), autofocus: true %>
</div>
<div class="form-group">
  <%= f.label :description, "Descrição" %>
  <%= f.text_area :description, rows: 7, cols: 15, class: "form-control", placeholder: t("story.sample_description") %>
</div>
<div class="form-group">
  <%= f.label :tag_list, "Tags" %>
  <%= f.text_field :tag_list, rows: 7, cols: 15, class: "form-control", placeholder: t("story.sample_tags") %>
</div>