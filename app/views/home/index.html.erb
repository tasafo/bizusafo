<%= render "shared/story_filters" %>

<% if @stories.any? %>
  <div id="stories-container">
    <%= render partial: "stories/story", collection: @stories, locals: { show_comments: false, full_description: false } %>
  </div>
<% else %>
  <div class="well">
    <%= t("story.no_story") %>
  </div>
<% end %>

<div class="center-block pagintation-center">
  <%= paginate @stories %>
</div>
